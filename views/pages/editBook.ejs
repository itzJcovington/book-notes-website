<%- include('../partials/head') %>
    <body>
        <header>
            <h1>Edit Book: <%= book.title %></h1>
            <a href=<%= route %>>Go Back</a>
        </header>
        <main>
            <form method="POST" action=<%= submitRoute %>>
                <input type="hidden" name="title" value="<%= book.title %>">
                <input type="hidden" name="author" value="<%= book.author %>">
                <input type="hidden" name="olid" value="<%= book.olid %>">

                <label for="date_read">Date Read:</label>
                <input type="date" id="date_read" name="date_read" value="<%= book.formattedDate %>" required>

                <label for="rating">Rating:</label>
                <input type="number" id="rating" name="rating" value="<%= book.rating %>" min="0" max="5" required>

                <label for="notes">Notes:</label>
                <textarea id="notes" name="notes"><%= book.notes %></textarea>

                <button type="submit">Save Changes</button>
            </form>
        </main>
<%- include('../partials/footer') %>